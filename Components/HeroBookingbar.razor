<MudGrid>
    <MudItem xs="3">
        <MudTextField T="DateTime?" Format="yyyy-MM-dd" Label="Date" Variant="Variant.Text" InputType="InputType.Date"/>
    </MudItem>
    <MudItem xs="3">
        <MudNumericField @bind-Value="IntValue" Label="How many days?" Variant="Variant.Text" Min="0" Max="15" />
    </MudItem>
    <MudItem xs="3">
        <MudNumericField @bind-Value="DoubleValue" Label="How many rooms?" Variant="Variant.Text" Min="0.0" />
    </MudItem>
    <MudItem xs="3" Class="mt-2">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Style=" height: 52px;">Check Availability</MudButton>
    </MudItem>

</MudGrid>

@code {
    public int IntValue { get; set; }
    public double DoubleValue { get; set; }
    public decimal DecimalValue { get; set; }
}