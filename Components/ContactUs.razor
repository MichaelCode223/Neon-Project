<MudPaper Class="pa-16 ma-2" Elevation="0">
    <MudText Typo="Typo.h4" Align="Align.Center">Contact Us</MudText>
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudStack>
                <MudTextField T="string" Label="First Name" Class="mb-4"></MudTextField>
                    <MudTextField T="string" Label="Last name" Class="mb-4"></MudTextField>
                    <MudTextField T="string" Label="Mobile Number" Class="mb-4"></MudTextField>
                    <MudTextField T="string" Lines="5" Label="Message" Class="mb-4"></MudTextField>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">Message</MudButton>
            </MudStack>
        </MudItem>
        <MudItem xs="12" sm="6">
            
                    <MudStack>     
                <MudPaper Elevation="0">
                     <MudStack Row="true">
                <MudPaper Class="pa-6 ma-2" Elevation="0">
            <MudIconButton Icon="@Icons.TwoTone.LocationOn" Color="Color.Error" aria-label="phone"></MudIconButton>
                </MudPaper>
                    <MudStack Row="false">
                        <MudPaper Class="pa-6 ma-2" Elevation="0">
                            <MudText Typo="Typo.h5">XYZ Road, ABC Building</MudText>
                            <MudText>Johannesburg, South Africa, RSA</MudText>
                        </MudPaper>
                    </MudStack> 
                </MudStack>
                </MudPaper>
                
                
                <MudPaper Elevation="0">
                    <MudStack Row="true">
                <MudPaper Class="pa-6 ma-2" Elevation="0">
            <MudIconButton Icon="@Icons.Filled.Phone" Color="Color.Error" aria-label="phone"></MudIconButton>
                </MudPaper>
                <MudStack Row="false">
                    <MudPaper Class="pa-6 ma-2" Elevation="0">
                        <MudText Typo="Typo.h5">(+27) 123-454-6789</MudText>
                        <MudText>Mon - Sat, 10AM - 6PM</MudText>
                    </MudPaper>
                </MudStack> 

            </MudStack>
                </MudPaper>


                <MudPaper Elevation="0">
                        <MudStack Row="true">
                    <MudPaper Class="pa-6 ma-2" Elevation="0">
                    <MudIconButton Icon="@Icons.TwoTone.Email" Color="Color.Error" aria-label="email"></MudIconButton>
                </MudPaper>
                <MudStack Row="false">
                    <MudPaper Class="pa-6 ma-2" Elevation="0">
                        <MudText Typo="Typo.h5">info@pitchperfectproperties.com</MudText>
                        <MudText>Email Us your Query</MudText>
                    </MudPaper>
                </MudStack>

            </MudStack>
                </MudPaper> 
                    </MudStack>
        </MudItem>
    </MudGrid>
</MudPaper>